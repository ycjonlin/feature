@import bootstrap

spectrum = #1abc9c #2ecc71 #3498db #9b59b6 #e74c3c #e67e22 #f1c40f

body, html
  margin 0
  width 100%
  height 100%

ul.navigation
  float right
  position fixed
  top: 50%
  margin-top -95px
  padding 25px
  right 0
  z-index 9999
  
  &>li
    cursor pointer
    display block
    width 12px
    height 12px
    border 2px solid white
    border-radius 8px
    margin-bottom 8px
    
    &.active
      background white

.slide
  background-attachment fixed
  width 100%
  height 100%
  position relative
  overflow hidden
  
  &:nth-child(even)
    background-color saturate(lighten(spectrum[0], 40%), 40%)
  &:nth-child(odd)
    background-color saturate(lighten(spectrum[1], 40%), 40%)
  
  & div
    background-color rgba(255,255,255,0.25)
    
  .container
    padding 80px
    height 100%
    
  h1
    font-size 4em
    text-align center
  h2
    font-size 2.8em
    text-align center